    <LinearLayout
        android:id="@+id/headingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="30dp"
        android:paddingRight="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="14dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:queryHint="@string/finding"
            android:background="@drawable/rounded_view"
            android:backgroundTint="@color/white"
            android:layout_marginRight="10dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPerson"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:src="@drawable/ic_person"
            android:tint="@color/green"
            app:shapeAppearanceOverlay="@style/rounded_corner" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bodyLayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headingLayout"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvPlus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plus"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.05"
            android:text="@string/heading_1"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlus" />

        <TextView
            android:id="@+id/tvCmt_1"
            app:layout_constraintTop_toBottomOf="@id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cmt_1"
            android:textSize="14dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/picture"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/tvCmt_1"
            app:shapeAppearanceOverlay="@style/rounded_corner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bodyLayout_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/bodyLayout_1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:letterSpacing="-0.06"
            android:text="@string/heading_2"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cmt_2"
            android:textSize="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/rvShowImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

